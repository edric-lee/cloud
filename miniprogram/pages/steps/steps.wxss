.modal{
  position: fixed;
  width: 90%;
  top: 30%;
  right: 0;
  bottom: 0;
  left: 5%;
  border-radius: 5rpx;

}
.zhezao{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  }
.modalImg {
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  border-radius: 5px 5px 0 0;
}
.bar {
  display: flex;
  position: relative;
  align-items: center;
  background: #fff;
  height: 100rpx;
  justify-content: space-between;
  border-radius: 0 0 5px 5px;
}
.bar .action {
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: center;
  max-width: 100%;
}
