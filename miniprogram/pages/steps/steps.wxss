.line {
  margin-left: 20rpx;
   margin-top: -60px;  
  height: 50px;
  width: 1px;
  background-color: #e9eaec;
  
}
.line_after{
  transition: all 0.3s ease-in-out 0s;
  transform: translateY(0rpx);
  margin-left: 20rpx;
   margin-top: -60px;  
  height: 50px;
  width: 1px;
  background-color: #2d8cf0;
}
.cu-steps{
