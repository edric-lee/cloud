.main{
  display: flex;
  align-items: center;
  justify-content: center;  
}
.container{
  width: 95%;
  border: 1px solid rgb(192, 192, 192);
  border-radius: 5px;
  box-shadow:0px 2px 6px 0px rgb(192, 192, 192) inset;
}
.subject{
  margin: 5px;
}
.text{
font-size: 12px;
  
}
.price{
  color: red;
  
}
.title{
  width: 90%;
  display: flex; 
  justify-content: space-between;
  font-size: 10px;
  color: rgb(128, 128, 128);
  margin-top: 10px;
}
#address_view {
  width: 90%;
  height: 40px;
  margin-bottom: 20px;
  border-bottom: 1px solid rgb(128, 128, 128);
  display: flex; 
  
  justify-content: space-between;
}

#address_view label {
  /* background-color: black; */
  width: 34.5%;
  height: 35px;
  line-height: 40px;
  float: left;
  /* margin-left: 10%; */
}
.section{
  width: 90%;
  border-bottom: 1px solid rgb(128, 128, 128);
  margin: 8px;
  
}
.btn_view{
  width: 70%;
  margin-bottom: 20px;
  background-color: red;
  border-radius: 5px;
  height: 40px;
  color: white;
  font-size: 20px;
  display: flex; 
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.radio-box{
  display: inline-block;
  position: relative;
  height: 20px;
  line-height: 20px;
  margin-right: 5px;
  font-size: 26rpx;
}
.input-radio {
  display: inline-block;
  position: absolute;
  opacity: 0;
  width: 20px;
  height: 20px;
  cursor: pointer;
  left: 0px;
  outline: none;
  -webkit-appearance: none;
}
.radio {
  display: inline-block;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  vertical-align: middle;
  cursor: pointer;
  background: #D7D7D9;
  
}
.on{
    background:red;
    font-size:20px;
    color:  white;
}
