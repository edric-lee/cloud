<!--index.wxml-->
<view class="container">
  <view class="section" style="background:#787878;margin:20rpx;padding:20rpx">
    <picker mode="date" value="{{date}}" bindchange="bindDateChangeTrain">
      <view class="picker">
        日期: {{date}}
      </view>
    </picker>
  </view>
  <view id="address_view">
    <label bindtap="startTrainStation" data-code="{{startName}}">{{startName}}</label>
    <label bindtap="endTrainStation" data-code="{{endName}}">{{endName}}</label>
  </view>

  <view id="btn_view" bindtap="bindBtnTapTrain">
    <button>查 询</button>
  </view>
  <view>
    <modal confirm-text="确定" hidden="{{modalHidden}}" bindconfirm="modalChange" no-cancel="true">
      {{confirmText}}
    </modal>
  </view>
</view>

