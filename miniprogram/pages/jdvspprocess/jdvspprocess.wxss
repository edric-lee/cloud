.main{
    width: 98%;
    margin: auto;
    margin-top: 2%;
    border: 1px solid #000;
}
.head{
    height: 10%;
    width: 100%;
    border-bottom: 1px solid #000;
    display: flex;
    align-items: center;
    justify-content: center;  
    font-size: 60rpx;

}
.body{
    width: 100%;
    height: 90%;
    display: flex;
}
.left{
    width: 12%;
    height: 100%;
    border-right: 1px solid #000;
}
.mid{
    width: 44%; 
    height: 100%;
    border-right: 1px solid #000;
}
.right{
    width: 44%; 
    height: 100%;
}
.title{
    width: 100%;
    height: 8%;
    display: flex;
    align-items: center;
    justify-content: center;  
    font-size: 40rpx;
}
.left_title{
    width: 100%;
    height: 26.4%;
    writing-mode: vertical-lr;
    display: flex;
    align-items: center;
    justify-content: center;  
    font-size: 30rpx;
}
.content{
    width: 100%;
    height: 18.4%;
    border-top: 1px solid #000;
}
.left_content{
    width: 100%;
    height: 18.4%;
    border-top: 1px solid #000;
    writing-mode: vertical-lr;
    display: flex;
    align-items: center;
    justify-content: center;  
    font-size: 30rpx;
}
.text{
    height: 60%;
    width: 70%;
    border: 1px solid #000;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: center;  
    font-size: 30rpx;
}
.icon_top{
    height: 20%;
    display: flex;
    align-items: center;
    justify-content: center; 
}
.icon_buttom{
    height: 20%;
    display: flex;
    align-items: center;
    justify-content: center; 
}
