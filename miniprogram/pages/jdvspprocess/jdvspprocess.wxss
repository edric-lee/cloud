.main{
    width: 98%;
    margin: auto;
    margin-top: 2%;
    border: 1px solid #2193b0;
}
.head{
    height: 10%;
    width: 100%;
    border-bottom: 1px solid #2193b0;
    display: flex;
    align-items: center;
    justify-content: center;  
    font-size: 60rpx;
    background-color: #2193b0;
    color: white;
}
.body{
    width: 100%;
    height: 90%;
    display: flex;
    text-align: center;
}
.left{
    width: 12%;
    height: 100%;
    border-right: 1px solid #2193b0;
    color: #2193b0;
}
.mid{
    width: 44%; 
    height: 100%;
    border-right: 1px solid #2193b0;
}
.right{
    width: 44%; 
    height: 100%;
}
.title{
    width: 100%;
    height: 8%;
    display: flex;
    align-items: center;
    justify-content: center;  
    font-size: 40rpx;
    color: #2193b0;
}
.left_title{
    width: 100%;
    height: 26.4%;
    writing-mode: vertical-lr;
    display: flex;
    align-items: center;
    justify-content: center;  
    font-size: 30rpx;
}
.content{
    width: 100%;
    height: 18.4%;
    border-top: 1px solid #2193b0;
}
.left_content{
    width: 100%;
    height: 18.4%;
    border-top: 1px solid #2193b0;
    writing-mode: vertical-lr;
    display: flex;
    align-items: center;
    justify-content: center;  
    font-size: 30rpx;
}
.text{
    height: 60%;
    width: 70%;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: center;  
    font-size: 30rpx;
    background-color: #2193b0;
    color: white;
    border-radius: 3px;
    box-shadow: 0rpx 40rpx 100rpx 0rpx rgba(0, 0, 0, 0.07);
}
.text_two{
    height: 60%;
    width: 100%;
    display: flex;
    justify-content: space-around;
}
.text_two_text{
    height: 100%;
    width: 40%;
    border: 1px solid #2193b0;
    display: flex;
    align-items: center;
    justify-content: center;  
    font-size: 30rpx;
    text-align: center;
    background-color: #2193b0;
    color: white; 
    border-radius: 3px;
    box-shadow: 0rpx 40rpx 100rpx 0rpx rgba(0, 0, 0, 0.07);

}
.icon_top{
    height: 20%;
    display: flex;
    align-items: center;
    justify-content: center; 
}
.icon_buttom{
    height: 20%;
    display: flex;
    align-items: center;
    justify-content: center; 
}
.icon-refresharrow{
    color: #2193b0;
}